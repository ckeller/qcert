<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Export artifacts from jrules2CAMP project to bin">

	<!-- The following properties should change when this code is moved to qcert -->
	<property name="dest" value="../../qcert/javaService/services"/>
	<property name="camp-java" value="../../qcert/camp-java"/>

	<target name="create_run_jar">
		<delete file="${dest}/jrules2CAMP.jar"/>
        <jar destfile="${dest}/jrules2CAMP.jar">
            <fileset dir="bin" excludes="tests/**"/>
            <fileset dir="${camp-java}/bin"/>
        </jar>
        <copy file="lib/jrules-engine.jar" todir="${dest}"/>
		<!-- Other things in lib are for the I/O generation, and are not exported to javaServices -->
    </target>
</project>
