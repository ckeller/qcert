<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_server_jar" name="Export artifacts from sqlParser project to bin">
  <property name="dest" value=".."/>

  <target name="create_run_jar">
    <delete file="${dest}/bin/qcert-runners.jar"/>
      <jar destfile="${dest}/bin/qcert-runners.jar">
        <fileset dir="bin"/>
      </jar>
      <copy todir="${dest}/lib">
	<fileset file="cloudant-client-1.2.3.jar"/>
	<fileset file="cloudant-client-1.2.3-sources.jar"/>
	<fileset file="commons-codec-1.9.jar"/>
	<fileset file="commons-codec-1.9-sources.jar"/>
	<fileset file="commons-collections-3.2.2.jar"/>
	<fileset file="commons-collections-3.2.2-sources.jar"/>
	<fileset file="commons-logging-1.2.jar"/>
	<fileset file="commons-logging-1.2-sources.jar"/>
	<fileset file="gson-2.7.jar"/>
	<fileset file="gson-2.7-sources.jar"/>
	<fileset file="httpclient-4.5.2.jar"/>
	<fileset file="httpclient-4.5.2-sources.jar"/>
	<fileset file="httpcore-4.4.5.jar"/>
	<fileset file="httpcore-4.4.5-sources.jar"/>
	<fileset file="junit-4.9.jar"/>
	<fileset file="junit-4.9-sources.jar"/>
	<fileset dir="services"/>
      </copy>
  </target>
</project>
